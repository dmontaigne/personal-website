---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  noindex?: boolean;
}

const { title, description = "David Whipps - Product designer and builder", noindex = false } = Astro.props;
const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <header class="site-header">
      <a href="/" class="site-name">David Whipps</a>
      <nav class="site-nav">
        <a href="/writing" class:list={[{ active: pathname.startsWith('/writing') }]}>Writing</a>
        <a href="/projects" class:list={[{ active: pathname.startsWith('/projects') }]}>Projects</a>
        <a href="/reading" class:list={[{ active: pathname.startsWith('/reading') }]}>Reading</a>
      </nav>
    </header>
    <main class="container" transition:animate="fade">
      <slot />
    </main>
    <footer class="site-footer">
      <span class="logomark">✢</span>
      <p class="copyright">© 2026 David Whipps</p>
    </footer>
  </body>
</html>
